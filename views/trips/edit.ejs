<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <ul>
      <li><%= trip.origin %></li>
      <li><%= trip.destination %></li>
      <li><%= trip.yourTime %></li>
    </ul>
    <form class="editForm" action="/trips/<%= trip.id %>/edit?_method=PUT" method="POST">
      <fieldset>
        <input type="hidden" name="" value="<%= trip.origin %>"/>
        <input type="hidden" name="" value="<%= trip.destination %>"/>
        <input type="hidden" name="" value="<%= trip.yourTime %>">
        <textarea name="description"></textarea>
      </fieldset>
      <input type="submit" value="publish">
    </form>
  </body>
</html>
